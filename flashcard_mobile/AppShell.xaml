<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="flashcard_mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:flashcard_mobile"
    xmlns:views="clr-namespace:flashcard_mobile.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="flashcard_mobile">

    <ShellContent Route="login" ContentTemplate="{DataTemplate views:LoginPage}" />
    <ShellContent Route="register" ContentTemplate="{DataTemplate views:RegisterPage}" />
    <ShellContent Route="home" ContentTemplate="{DataTemplate views:HomePage}" />
    <ShellContent Route="editaccount" ContentTemplate="{DataTemplate views:EditAccountPage}" />

    <!-- Add other pages as needed such as EditPage -->

</Shell>